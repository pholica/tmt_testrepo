/broken_reboot:
  summary:
    test process control when invoking tmt-reboot
  discover:
    how: fmf
  execute:
    how: tmt

/tests:
  /01_check_process_control:
    path: /
    test: |
      #!/bin/bash -xe
      time ./check_process_control.py
  /02_detect_side_effect_files:
    test: |
      sleep 10
      ls -1 /tmp/side_effect_*
